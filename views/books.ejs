<!DOCTYPE html>
<html lang="en">
<head>
    <title>Books</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        Grand Library ðŸ“š â€“ A Place for Every Book Lover
    </header>

    <!-- Navigation -->
    <nav>
        <a href="/">Home</a>
        <a href="/books">Browse Books</a>
        <% if (!session.user) { %>
            <a href="/login">Sign in / Sign up</a>
        <% } else { %>
            <a href="/dashboard">Dashboard</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        <% } %>
    </nav>

    <div class="container">
        <h2>Book List</h2>
        <ul>
            <% books.forEach(book => { %>
                <li>
                    <strong><%= book.title %></strong> by <%= book.author %> 
                    (<%= book.category ? book.category.name : 'No Category' %>) 
                    - Available: <%= book.availableCopies %>
                    <form action="/borrow/<%= book._id %>" method="POST">
                        <button class="btn-default" type="submit">Borrow</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Footer -->
    <footer>
        &copy; <%= new Date().getFullYear() %> Grand Library. All rights reserved.
    </footer>

</body>
</html>
