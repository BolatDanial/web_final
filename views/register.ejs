<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        Grand Library ðŸ“š â€“ A Place for Every Book Lover
    </header>

    <!-- Navigation -->
    <nav>
        <a href="/">Home</a>
        <a href="/books">Browse Books</a>
        <% if (!session.user) { %>
            <a href="/login">Sign in / Sign up</a>
        <% } else { %>
            <a href="/dashboard">Dashboard</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        <% } %>
    </nav>

    <div class="container">
        <h2>Register</h2>

        <% if (errors.length > 0) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li style="color: red;"><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
    
        <form action="/register" method="POST">
            <input type="text" name="name" placeholder="Name" value="<%= oldInput.name || '' %>" required />
            <input type="email" name="email" placeholder="Email" value="<%= oldInput.email || '' %>" required />
            <input type="password" name="password" placeholder="Password" required />
            <button class="btn-default" type="submit">Sign Up</button>
        </form>
    
        <a href="/login">Already have an account? Login</a>   
    </div>   

    <!-- Footer -->
    <footer>
        &copy; <%= new Date().getFullYear() %> Grand Library. All rights reserved.
    </footer>
</body>
</html>
